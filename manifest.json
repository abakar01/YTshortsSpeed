{
  "manifest_version": 3,
  "name": "Speed Control for Shorts",
  "description": "Расширение для управления скоростью видеороликов YouTube Shorts.",
  "version": "1.0",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/shorts/*"
      ],
      "js": [
        "speed-control.js"
      ],
      "run_at": "document_end"
    }
  ]
}
